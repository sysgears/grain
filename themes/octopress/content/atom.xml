<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title><![CDATA[${site.title}]]></title>
<link href="${site.url}${page.url}" rel="self"/>
<link href="${site.url}/"/>
<updated>${toXmlTime(page.lastUpdated)}</updated>
<id>${site.url}/</id>
<author>
  <name><![CDATA[${site.author}]]></name>
  <% if (site.email) { %>
    <email><![CDATA[${site.email}]]></email>
  <% } %>
</author>
<generator uri="http://sysgears.com/work/grain/docs/latest/">Grain</generator>

<% page.posts.each { post -> %>
  <entry>
    <title type="html"><![CDATA[${post.title}]]></title>
    <link href="${site.url}${post.url}"/>
    <updated>${toXmlTime(lastUpdated(post))}</updated>
    <id>${post.url}</id>
    <content type="html"><![CDATA[${post.render().content}]]></content>
  </entry>
<% } %>
</feed>